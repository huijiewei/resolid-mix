{
  "name": "resolid-remix",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "lefthook install",
    "lint": "pnpm run -r --if-present lint",
    "format": "prettier --write .",
    "website:dev": "pnpm run --filter website dev",
    "website:build": "pnpm run --filter website build",
    "website:serve": "pnpm run --filter website serve",
    "website:deploy": "pnpm run --filter website... build",
    "drizzle": "pnpm run --filter website drizzle-kit",
    "resolid": "pnpm run --filter website resolid"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lefthook": "^1.6.1",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "repository": "https://github.com/huijiewei/resolid-remix.git",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.14.3"
}
